{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
      "__DEV__": false,
      "__PROD__": false
  },
  "rules": {
    "semi": [2, "never"],
    "comma-dangle": [2, "never"],
    "jsx-quotes": [2, "prefer-single"],
    "no-semi": [0, "always"],
    "no-comma-dangle": [0, "always"],
    "no-multi-spaces": ["error", { exceptions: { "ImportDeclaration": true, "VariableDeclarator": true } }],
    "react/require-default-props": 2
  }
}